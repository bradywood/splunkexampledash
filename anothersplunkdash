<dashboard>
    <label>Asset Response Time (95th Percentile)</label>
    <row>
        <panel>
          <table>
             <title>Asset Response Times</title>
             <search>
               <![CDATA[
                 makeresults
                  | eval asset_response=mvzip("Asset A,Asset B,Asset C", "10,25,75")
                  | mvexpand asset_response
                  | eval asset = split(asset_response, ",")[0]
                  | eval response_time = split(asset_response, ",")[1]
                  | fields asset, response_time
                  | eval response_time_num=tonumber(response_time)
                  | eval level=case(response_time_num<=20,"low",response_time_num>20 AND response_time_num<=50, "med", response_time_num>50,"high")
               ]]>
              </search>
              <format type="html">
                  <style>
                  .low {
                     display: inline-block;
                    border-radius: 5px;
                    border: 1px solid grey;
                    background-color: lightgreen;
                    padding: 10px;
                    text-align: center;
                    margin: 5px;
                  }
                  .med {
                    display: inline-block;
                     border-radius: 5px;
                     border: 1px solid grey;
                    background-color: yellow;
                     padding: 10px;
                     text-align: center;
                     margin: 5px;
                  }
                  .high {
                    display: inline-block;
                    border-radius: 5px;
                     border: 1px solid grey;
                    background-color: red;
                    padding: 10px;
                    text-align: center;
                    margin: 5px;
                  }

                   .asset-row {
                     display: flex;
                     align-items: center;
                     justify-content: center;
                  }
                   .asset-row > div {
                     display: flex;
                    align-items: center;
                   }
                  .asset-arrow {
                     font-size: 30px;
                     padding: 0 30px;
                   }
                 </style>
                <html>
                  <table>
                    <tbody>
                    <tr>
                       <td>
                          <div class="asset-row">
                              <div>
                                   <div class="$row.level$">
                                      $row.response_time$
                                  </div> <p style="margin: 0px;">$row.asset$</p>
                              </div>
                               <div class="asset-arrow">
                                    →
                                </div>
                               <div>
                                    <div class="$row.level$">
                                      $row.response_time$
                                    </div> <p style="margin: 0px;">$row.asset$</p>
                              </div>
                               <div class="asset-arrow">
                                    →
                                </div>
                               <div>
                                  <div class="$row.level$">
                                      $row.response_time$
                                 </div> <p style="margin: 0px;">$row.asset$</p>
                              </div>
                          </div>
                        </td>
                    </tr>
                 </tbody>
                </table>
               </html>
              </format>
         </table>
        </panel>
    </row>
   <row>
        <panel>
        <title>Average Response Time</title>
        <single>
         <search>
             <![CDATA[
                makeresults
                 | eval asset_response=mvzip("Asset A,Asset B,Asset C", "10,25,75")
                 | mvexpand asset_response
                 | eval response_time = split(asset_response, ",")[1]
                 | eval response_time_num=tonumber(response_time)
                 | stats avg(response_time_num) as avg_response_time
              ]]>
           </search>
          <option name="colorBy">value</option>
        </single>
    </panel>
   </row>
   <row>
      <panel>
        <title>Response Time Trend</title>
        <chart>
          <search>
            <![CDATA[
                 makeresults
                 | eval time = _time
                 | eval asset_response=mvzip("Asset A,Asset B,Asset C", "10,25,75")
                 | mvexpand asset_response
                 | eval response_time = split(asset_response, ",")[1]
                 | eval response_time_num=tonumber(response_time)
                 | stats avg(response_time_num) as avg_response_time by time
                 | timechart span=1h avg(avg_response_time)
              ]]>
           </search>
           <option name="charting.chart">line</option>
        </chart>
    </panel>
   </row>
</dashboard>
