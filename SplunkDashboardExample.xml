<dashboard version="1.1" script="drilldown.js">
    <label>Business Flow Monitoring (Structured)</label>
    <description>Dashboard with 5 flows, business metrics in row 1, and asset summaries in row 2.</description>

    <!-- Base Searches -->
    <search id="base_search_flow1">
        <query>
            | makeresults
            | eval flow="Order Processing", total_customers=1230, avg_processing_time=1500, customer_errors=25, customer_types="New,Repeat", services_running=10, throughput=250, response_time=300, error_rate=0.02
        </query>
    </search>
    <search id="base_search_flow2">
        <query>
            | makeresults
            | eval flow="Account Creation", total_customers=780, avg_processing_time=800, customer_errors=15, customer_types="Standard,Premium", services_running=8, throughput=150, response_time=200, error_rate=0.01
        </query>
    </search>
    <search id="base_search_flow3">
        <query>
            | makeresults
            | eval flow="Payment Processing", total_customers=900, avg_processing_time=950, customer_errors=30, customer_types="Card,Direct", services_running=12, throughput=300, response_time=350, error_rate=0.03
        </query>
    </search>
    <search id="base_search_flow4">
        <query>
            | makeresults
            | eval flow="Refund Processing", total_customers=450, avg_processing_time=1200, customer_errors=10, customer_types="Credit,Refund", services_running=7, throughput=100, response_time=400, error_rate=0.02
        </query>
    </search>
    <search id="base_search_flow5">
        <query>
            | makeresults
            | eval flow="Inventory Management", total_customers=670, avg_processing_time=600, customer_errors=5, customer_types="Wholesale,Retail", services_running=9, throughput=200, response_time=250, error_rate=0.01
        </query>
    </search>
    <!-- Flow Overview Chart -->
    <row>
        <panel>
            <title>Flow Overview - Customers Processed</title>
            <chart>
                <search>
                    <query>
                        | makeresults
                        | eval data="[{\"flow\":\"Order Processing\",\"customers\":1230},{\"flow\":\"Account Creation\",\"customers\":780}, {\"flow\":\"Payment Processing\",\"customers\":900}, {\"flow\":\"Refund Processing\",\"customers\":450},{\"flow\":\"Inventory Management\",\"customers\":670}]"
                        | spath input=data
                        | mvexpand data
                        | spath input=data
                        | fields flow customers
                    </query>
                </search>
               <option name="charting.chart">column</option>
                 <option name="charting.legend.placement">none</option>
                <option name="charting.axisTitleX.visibility">collapsed</option>
            </chart>
        </panel>
    </row>

    <!-- Flow 1 -->
    <row>
        <panel>
            <title>Order Processing Flow Business Metrics - Total Customers</title>
            <single>
                <search base="base_search_flow1">
                    <query>
                        | fields total_customers
                    </query>
                </search>
             </single>
        </panel>
        <panel>
            <title>Order Processing Processing Time (ms)</title>
            <single>
                <search base="base_search_flow1">
                    <query>
                        | fields avg_processing_time
                    </query>
                </search>
            </single>
        </panel>
        <panel>
            <title>Order Processing Customer Errors</title>
            <single>
                <search base="base_search_flow1">
                    <query>
